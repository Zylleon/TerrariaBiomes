<?xml version="1.0" encoding="utf-8"?>
<Defs>


  <ThingDef ParentName="ZTB_HallowedTreeBase">
    <defName>ZTB_HallowedPine</defName>
    <label>hallowed pine</label>
    <description>A hallowed pine tree.</description>
    <graphicData>
      <texPath>ZTBiomes/Plant/HallowedPine</texPath>
      <graphicClass>Graphic_Random</graphicClass>
       <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <statBases>
      <Beauty>5</Beauty>
    </statBases>
    <plant>
      <growDays>18</growDays>
      <harvestWork>800</harvestWork>
      <harvestYield>30</harvestYield>
      <visualSizeRange>1.3~3.0</visualSizeRange>
    </plant>
	<modExtensions>
		<li Class="TerrariaBiomes.ZTB_AllowedRange">
			<maxTileTemp>-5</maxTileTemp>
		</li>
	</modExtensions>
  </ThingDef>


</Defs>
