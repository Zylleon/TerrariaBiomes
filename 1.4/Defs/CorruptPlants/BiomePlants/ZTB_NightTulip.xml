<?xml version="1.0" encoding="utf-8"?>
<Defs>


 <ThingDef ParentName="PlantBase">
    <defName>ZTB_NightTulip</defName>
    <label>night tulip</label>
    <description>A small corrupted flower. Still pretty.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>4</Beauty>
      <Nutrition>0.18</Nutrition>
    </statBases>
    <graphicData>
      <texPath>ZTBiomes/Plant/NightTulip</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.0</fertilitySensitivity>
      <growDays>6.2</growDays>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.3~0.7</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>120</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
	<modExtensions>
		<li Class="TerrariaBiomes.ZTB_AllowedRange">
			<minTileTemp>-10</minTileTemp>
			<maxTileTemp>10</maxTileTemp>
			<swamp>false</swamp>
		</li>
	</modExtensions>
  </ThingDef>

</Defs>
